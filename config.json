{
  "source": ["design_token.json"],
  "platforms": {
    "flutter": {
      "transformGroup": "figma-flutter",
      "buildPath": "./packages/design/foundation/",
      "files": [
        {
          "destination": "color/color.g.dart",
          "format": "flutter/class.dart",
          "prefix": "App",
          "className": "AppColors",
          "filter": {
            "type": "color"
          }
        },
        {
          "destination": "sizing/sizing.g.dart",
          "format": "flutter/class.dart",
          "prefix": "App",
          "className": "AppSizing",
          "filter": {
            "type": "sizing"
          }
        }
      ]
    }
  }
}
